<%=
  base00 = '#2d2d2d' # black
  base03 = '#747369' # bright black
  base05 = '#d3d0c8' # white
  base07 = '#f2f0ec' # bright white
  base0A = '#ffcc66' # yellow
  base0B = '#99cc99' # green
  base0C = '#66cccc' # cyan

  right_arrow = 'î‚°'

  "# Generated from ERB"
%>

set -g status-justify "absolute-centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=<%= base05 %>,bg=<%= base00 %>"
set -g status-right-style "none"
set -g pane-active-border-style "fg=<%= base0B %>"
set -g message-style "fg=<%= base0C %>,bg=<%= base00 %>"
set -g pane-border-style "fg=<%= base0B %>"

# Bottom Status-line
set -g status-style "none,bg=<%= base00 %>"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"
setw -g window-status-separator "   "

# Text for far left and right
set -g status-left ""
set -g status-right ""

# Format for a single window
setw -g window-status-style "none,fg=<%= base0A %>,bg=<%= base00 %>"

setw -g window-status-format "\
#[fg=<%= base03 %>,bg=<%= base00 %>]#W"

setw -g window-status-current-format "\
#[fg=<%= base07 %>,bg=<%= base00 %>]#W"

# custom changes
set-option -g history-limit 20000
set -g mouse on
set-option -sg escape-time 10 # makes vim more responsive
#set -g default-terminal "xterm-256color"
# nvim :checkhealth recommends this
set -g default-terminal "screen-256color"
set-option -g focus-events on
# for true colors
#set-option -a terminal-features "$TERM:RGB"

if-shell 'uname | grep --quiet Linux' 'bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "wl-copy"'
if-shell 'uname | grep --quiet Darwin' 'bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "pbcopy"'

# https://unix.stackexchange.com/questions/12032/how-to-create-a-new-window-on-the-current-directory-in-tmux
# -h means horizontal split
# -c <start_directory>
bind % split-window -h -c "#{pane_current_path}"
bind '"' split-window -c "#{pane_current_path}"

# Allow the passthrough of color escapes to let base16 work
set -g allow-passthrough "on"
